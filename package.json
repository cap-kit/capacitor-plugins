{
  "name": "capacitor-plugins",
  "private": true,
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "pnpm build --workspace-root=false",
    "clean": "pnpm clean --workspace-root=false",
    "lint": "pnpm lint --workspace-root=false",
    "test": "pnpm test --workspace-root=false",
    "verify": "pnpm -r run verify",
    "format": "pnpm -r run format",
    "docgen": "pnpm -r run docgen",
    "readme:reset": "tsx scripts/reset-readme.ts",
    "readme:update": "tsx scripts/update-readme.ts",
    "prepare": "husky",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && pnpm changeset publish"
  },
  "author": "CapKit Team",
  "lint-staged": {
    "packages/**/package.json": [
      "pnpm run readme:update",
      "git add README.md"
    ],
    "**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "swiftlint"
    ],
    "patchedDependencies": {
      "@capacitor/docgen@0.3.1": "patches/@capacitor__docgen@0.3.1.patch"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.21.0"
  }
}
