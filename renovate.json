{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:earlyMondays",
    ":preserveSemverRanges"
  ],
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on monday"],
    "automerge": true
  },
  "packageRules": [
    {
      "description": "Ignore local Redsys SDK dependencies that are not in public repositories",
      "matchPackageNames": ["redsys-sdk-inApp-2.4.5"],
      "enabled": false
    },
    {
      "description": "Temporarily block ESLint v10 due to peer dependency conflicts",
      "matchPackageNames": ["eslint", "@eslint/js"],
      "allowedVersions": "<10.0.0"
    },
    {
      "description": "Disable internal workspace package updates",
      "matchPackageNames": ["@cap-kit/*"],
      "enabled": false
    },
    {
      "description": "Capacitor peer deps: widen only",
      "matchDepTypes": ["peerDependencies"],
      "matchPackageNames": [
        "@capacitor/core",
        "@capacitor/android",
        "@capacitor/ios"
      ],
      "rangeStrategy": "widen"
    },
    {
      "description": "Group non-major devDependencies (visible PRs)",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "devDependencies (non-major)",
      "automerge": false
    },
    {
      "description": "Require changeset for production dependencies",
      "matchDepTypes": ["dependencies"],
      "labels": ["requires-changeset"]
    }
  ]
}
